{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["@types/aria-query"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
